{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "bundle exec rspec",
            "group": "test"
        },
        {
            "label": "Jekyll doctor",
            "type": "shell",
            "command": "bundle exec jekyll doctor",
            "group": "test"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
